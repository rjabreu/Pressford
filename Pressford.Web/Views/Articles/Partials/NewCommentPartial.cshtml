@model Pressford.Web.Models.Comment


<div class="new-comment-form">
    @using (Html.BeginForm("AddComment", "Articles"))
    {


        <h3>Say something:</h3>

        <div class="form-group span-6">

            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", col = "50", rows = "10", style = "min-width: 100%" })
            @Html.HiddenFor(m => m.ArticleId)

        </div>
        <div class="form-group text-right">
            <button type="submit" class="btn btn-primary ">Save comment</button>
        </div>

    }
</div>


